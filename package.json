{
  "name": "otonaguy",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run build -- --watch",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:content && npm run build:background && npm run build:popup && npm run copy:static",
    "build:popup": "vite build --config vite.config.ts",
    "build:content": "vite build --config vite.config.content.ts",
    "build:background": "vite build --config vite.config.background.ts",
    "copy:static": "cp manifest.json dist/ && cp -r public/icons dist/",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "vite": "^6.0.0",
    "@types/chrome": "^0.0.280"
  }
}
